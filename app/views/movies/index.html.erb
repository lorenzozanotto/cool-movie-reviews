<% if !user_signed_in? %>
  <div class="jumbotron">
    <h1>Rate your favorite movies!</h1>
    <p>Login or register to our site and get started! Sign in to start adding your movies and reviews like a professional reviewer. You won't regret that my man</p>
    <p><%= link_to "Sign Up To Write A Review", new_user_registration_path, class: "btn btn-primary btn-lg" %></p>
  </div>
<% end %>

<div class="row">
  <% @movies.each do |movie| %>
    <div class="col-sm-6 col-md-3">
      <div class="thumbnail">
        <%= link_to (image_tag movie.image.url(:medium), class: 'image'), movie %>
      </div>
    </div>
  <% end %>
</div>
